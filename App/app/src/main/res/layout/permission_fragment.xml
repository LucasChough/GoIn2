<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/permission_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To function correctly, this app must have your location.\n\nWe use it to ensure your safety during group events. You may uninstall the app or disable location access when not in use.\n\n Please select precise, and when brought to the setting menu, select (allow all the time)"
        android:textAlignment="center"
        android:textSize="16sp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:padding="24dp"
        android:elevation="4dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="8dp" />

    <Button
        android:id="@+id/permission_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okay, continue" />
</LinearLayout>
